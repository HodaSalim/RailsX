<% provide(:title, @user.name) %>
<div class="user-card">
  <%= gravatar_for @user %>
  <br>
  <%= @user.name %>,
  <%= @user.email %>
  <br>
  <%= link_to "Edit Profile Info", edit_user_path %>
</div>
<div class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>
