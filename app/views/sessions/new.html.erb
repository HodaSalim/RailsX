<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="col-md-6 col-md-offset-3 mx-auto mt-10">
  <%= form_with(scope: :user, url: new_user_session_path) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <div class="form-check">
      <%= f.label :remember_me, class: "form-check-label d-flex align-items-center mt-2 mb-2" do %>
        <%= f.check_box :remember_me, class: "align-middle w-25 m-0" %>
        <span>Remember me on this computer</span>
      <% end %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>

  <p>New user?
    <%= link_to "Sign up now!", new_user_registration_path %>
  </p>
</div>
